							+cardService("https://www.ars.usda.gov/ARSUserFiles/oc/images/photos/gallery/camera.jpg",
							"Motion design", "Lorem ipsum dolor sit amet consectetur adipisicing elit. Laboriosam maxime dolores nobis veniam, maiores vero aut voluptatem!")
			section.section.section-feedback
				.container-small
						h2.section-title Discuss your progect whit us
						form.form-feedback.grid-item-6(action="POST")
							.form-control
								input.input(type="text" id="nickname" name="nickname" class="input" placeholder="Name")
							.form-control
								input.input(type="email" id="user-email" name="user-email" class="input" placeholder="E-mail")
							.form-control
								textarea.textarea(id="content" name="content" class="textarea" placeholder="Hi! i'd like to work with you")
							.form-control
								button(type="submit" class= "button " + buttonPrimary + " button-block") Send message
		footer.footer
			.container
				.footer-wrapper
					.copyrights
						+link("#", "Motion |")(class= "logo footer-logo")
						span.slogan Hendcrafted with
						span.icon.icon-heart
					-
						let social_list = [
							{url: "#", classname: "icon-facebook"},
							{url: "#", classname: "icon-linkedin"},
							{url: "#", classname: "icon-instagram"}
						]
					-
						let listItemClass = "icon-social"
					+list(social_list, "list-social")